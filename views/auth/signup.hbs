<style>
  body {
    background: url("https://blog.parkinn.com/wp-content/uploads/sites/7/2017/01/berlin-lightning-timelapse-29.07.gif")no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

  }
</style>
<div class="logo">
  <h1 class="logo-title">GEOGAME</h1>
  <h2><i>The fun way to experience a city</i></h2>
</div>

<div class="flex-container">
  <form action="/auth/signup" method="POST" id="form-container">
    <h3 class="title">Signup</h3>
    <label for="email">Email</label>
    <input id="email" type="email" name="email" placeholder="Your Email">

    <br><br>

    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Your password">
    <br> {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>

    <button class="btn-signup">Create account</button>

    <p class="account-message">
      Already have an account?
      <a href="/auth/login">Login</a>
    </p>
  </form>

</div>