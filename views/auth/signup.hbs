<video autoplay muted loop id="myVideo">
  <source src="/images/Big-City-Life.mp4" type="video/mp4">
</video>



<div class="logo">
  <h1 class="logo-title">GEOGAME</h1>
  <h2><i>The fun way to experience a city</i></h2>
</div>

<div class="flex-container">
  <form action="/auth/signup" method="POST" id="form-container">
    <h3 class="title">Signup</h3>
    <div class="align">
      <label for="email" id="first">Email</label>
      <input id="email" type="email" name="email" placeholder="Your Email">

      <br><br>

      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
    </div>
    <br> {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>

    <button class="btn-signup">Create account</button>

    <p class="account-message">
      Already have an account?
      <a class="signup-link" href="/auth/login">Login</a>
    </p>
  </form>

</div>